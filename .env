# ----- SuiteCRM 8 Docker env (prefix per stack) -----
SUITECRM_PROJECT_NAME=suitecrm

# ===== Web (Nginx) =====
SUITECRM_WEB_HOST=127.0.0.1
SUITECRM_WEB_PORT_HOST=8080

# App
APP_ENV=dev
APP_DEBUG=1
CORS_ALLOW_ORIGIN="^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$"
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR
TRUSTED_HOSTS='^(.+\.)?(localhost|127\.0\.0\.1)$'
SITE_URL=http://localhost:${SUITECRM_WEB_PORT_HOST}
APP_SECRET=a29f15363f74d4f112ee6bb0c2582ca5

# MariaDB (DB named with prefix)
SUITECRM_DB_NAME=${SUITECRM_PROJECT_NAME}_suitecrm
SUITECRM_DB_USER=suitecrm
SUITECRM_DB_PASSWORD=secret
SUITECRM_DB_ROOT_PASSWORD=devroot
SUITECRM_DB_PORT=3306
SUITECRM_DB_PORT_HOST=3308
DATABASE_URL="mysql://${SUITECRM_DB_USER}:${SUITECRM_DB_PASSWORD}@db:${SUITECRM_DB_PORT}/${SUITECRM_DB_NAME}"

SUITECRM_PHPMYADMIN_PORT=8081

# Auto self-heal při chybě root hesla (Access denied)
SUITECRM_AUTO_FIX_DB=1

# Redis
SUITECRM_REDIS_HOST=redis
SUITECRM_REDIS_PORT=6379
SUITECRM_REDIS_PORT_HOST=6380

# Mail
SUITECRM_SMTP_HOST=mailhog
SUITECRM_SMTP_PORT=1025
MAIL_FROM_ADDRESS=no-reply@local.test
MAIL_FROM_NAME=SuiteCRM
SUITECRM_MAILHOG_PORT_HOST=8025

# Elasticsearch
SUITECRM_ELASTIC_HOST=elasticsearch
SUITECRM_ELASTIC_PORT=9200
SUITECRM_ES_PORT_HOST=9201
SUITECRM_ELASTIC_VERSION=7.17.9

# Node dev server (Vite/Nuxt)
SUITECRM_NODE_DEV_PORT=5173
SUITECRM_NODE_DEV_PORT_HOST=5173

MAIN_LOG_LEVEL=info
DEPRECATION_LOG_LEVEL=notice

